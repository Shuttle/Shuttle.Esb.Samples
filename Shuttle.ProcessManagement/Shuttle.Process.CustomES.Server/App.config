<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="serviceBus" type="Shuttle.Esb.ServiceBusSection, Shuttle.Esb" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="subscription" type="Shuttle.Esb.Sql.Subscription.SubscriptionSection, Shuttle.Esb.Sql.Subscription" />
    <section name="projection" type="Shuttle.Recall.Sql.ProjectionSection, Shuttle.Recall.Sql" />
  </configSections>

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c - %m%n" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\custom-es-process-server" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100000KB" />
      <datePattern value="-yyyyMMdd.'log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="TRACE" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>

  <subscription connectionStringName="ProcessManagement" />

  <projection eventStoreConnectionStringName="ProcessManagement" eventProjectionConnectionStringName="ProcessManagement" />

  <serviceBus>
    <messageRoutes>
      <messageRoute uri="msmq://./invoicing-server">
        <add specification="StartsWith" value="Shuttle.Invoicing" />
      </messageRoute>
      <messageRoute uri="msmq://./ordering-server">
        <add specification="StartsWith" value="Shuttle.Ordering" />
      </messageRoute>
      <messageRoute uri="msmq://./email-sender-server">
        <add specification="StartsWith" value="Shuttle.EMailSender" />
      </messageRoute>
    </messageRoutes>

    <inbox workQueueUri="msmq://./process-custom-es-server" deferredQueueUri="msmq://./process-custom-es-server-deferred" errorQueueUri="msmq://./shuttle-error" />
  </serviceBus>

  <connectionStrings>
    <clear />
    <add name="ProcessManagement" providerName="System.Data.SqlClient" connectionString="Data Source=.\sqlexpress;Initial Catalog=ProcessManagement;Integrated Security=SSPI;" />
  </connectionStrings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="log4net" publicKeyToken="669e0ddf0bb1aa2a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.0.7.0" newVersion="2.0.7.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Castle.Windsor" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Castle.Core" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.1.1.0" newVersion="4.1.1.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

</configuration>